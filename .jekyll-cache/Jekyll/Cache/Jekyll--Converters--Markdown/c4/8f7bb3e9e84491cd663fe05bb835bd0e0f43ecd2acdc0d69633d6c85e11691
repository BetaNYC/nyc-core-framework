<figure class="container narrow margin-y-4">

    <div class="accordion box-shadow-1">

        <button class="accordion__button h6" id="acc-button-boroughs-manhattan" data-toggle="accordion" aria-controls="acc-panel-boroughs-manhattan" aria-expanded="true">
                Manhattan
        </button>

        <div class="accordion__panel show" id="acc-panel-boroughs-manhattan" data-accordion="panel" aria-labelledby="acc-button-boroughs-manhattan" role="region">
